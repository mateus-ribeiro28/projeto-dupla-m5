<div class="livro-form-container">
    <a href="/livros/dashboard">Voltar</a>
    <h1>Editar livro</h1>
    <form action="/livros/edit" method="POST">
      <input type="hidden" name="id" value="{{livro.id}}">
      <div class="form-control">
        <label for="title">TÍtulo</label>
        <input type="text" name="title" placeholder="Digite o titulo do livro..." value="{{livro.title}}"> 

        <label for="author">Autor</label>
        <input type="text" name="author" placeholder="Digite o Nome do autor..." value="{{livro.author}}">

        <label for="gender">Gênero</label>
        <input type="text" name="gender" placeholder="Digite o gênero do livro..." value="{{livro.gender}}">
      </div>
      <input type="submit" value="Editar Livro">
    </form>

</div>